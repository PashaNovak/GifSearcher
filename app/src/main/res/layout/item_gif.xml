<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_padding"
    app:cardCornerRadius="7dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/gif_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:text="Новак Павел"
            android:textStyle="bold"
            android:textSize="@dimen/big_text_size"
            app:layout_constraintEnd_toEndOf="@+id/gif_container"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/gif_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gif_container_height"
            android:src="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@+id/gif_username" />

        <TextView
            android:id="@+id/gif_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/default_margin"
            android:layout_marginStart="@dimen/default_margin"
            android:text="lklklklklklklklk"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gif_container" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>